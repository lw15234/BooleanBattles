# Compile with standard options
GCC = gcc
CFLAGS = `sdl2-config --cflags` -O4 -Wall -Wextra -Wfloat-equal -pedantic -std=c99 -lm
TARGET = booleanBattles
LIBS = `sdl2-config --libs`

# Set up the linear sequence of modules, in dependency order
TEST = booleanBattles.c
BASE = base.c
ENEMY = $(BASE) enemy.c
CHECKATTACK = $(ENEMY) checkAttack.c
DAMAGE = $(CHECKATTACK) damage.c
DISPLAY = $(DAMAGE) display.c
STATEMACHINE = $(DISPLAY) stateMachine.c
PLAY = $(STATEMACHINE) play.c


# Make the whole program by default
default: play

# Compile and test each module
base:
	$(GCC) $(BASE) $(TEST) -DRUN=testBase -o $(TARGET) $(CFLAGS) $(LIBS)
	./booleanBattles
enemy:
	$(GCC) $(ENEMY) $(TEST) -DRUN=testEnemy -o $(TARGET) $(CFLAGS) $(LIBS)
	./booleanBattles
checkAttack:
	$(GCC) $(CHECKATTACK) $(TEST) -DRUN=testCheckAttack -o $(TARGET) $(CFLAGS) $(LIBS)
	./booleanBattles
damage:
	$(GCC) $(DAMAGE) $(TEST) -DRUN=testDamage -o $(TARGET) $(CFLAGS) $(LIBS)
	./booleanBattles
display:
	$(GCC) $(DISPLAY) $(TEST) -DRUN=testDisplay -o $(TARGET) $(CFLAGS) $(LIBS)
	./booleanBattles
stateMachine:
	$(GCC) -DRUN=runStateMachine $(STATEMACHINE)
	./booleanBattles
play:
	$(GCC) $(STATEMACHINE)
	./booleanBattles


clean:
	rm -f $(TARGET)

